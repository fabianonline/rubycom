<table>
  <tr>
    <th>Name</th>
    <th>Letzter Comic</th>
    <th>Anzahl Comics</th>
    <th>Aktionen</th>
  </tr>

  <% @comics.each do |comic| %>
    <tr>
      <td><%= h comic.name %></td>
      <td><%= time_ago_in_words(comic.strips.last.date) rescue "Nie" %></td>
      <td><%= comic.strips.count %></td>
      <td><%= link_to "Debug-Ansicht", debug_comic_url(comic) %>
          <%= link_to "bearbeiten", edit_comic_path(comic) %>
          <%= link_to "Löschen", comic, :method=>:delete, :confirm=>"Wirklich löschen? Es werden auch alle Bilder und so gelöscht..." %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Comic hinzufügen", new_comic_url %>
